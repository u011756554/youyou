<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youyou.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    	<!-- 访问网络，网络定位需要上网-->
	<uses-permission android:name="android.permission.INTERNET" /> 
	<uses-permission android:name="android.permission.CALL_PHONE"/> 
    <application
        android:name="com.youyou.app.YouYouApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.youyou.app.activity.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.youyou.app.activity.LoginActivity"
            android:launchMode="singleTask"></activity>
        
        <activity 
            android:name="com.youyou.app.activity.RegisterActivity"
            android:launchMode="singleTask"></activity>
        
        <activity 
            android:name="com.youyou.app.activity.MainActivity"
            android:launchMode="singleTask"></activity>    
            
        <activity 
            android:name="com.youyou.app.activity.DeliciousActivity"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.AdvertDetailActivity"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.GameActivity"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.MeActivity"
            android:launchMode="singleTask"></activity>
        
        <activity 
            android:name="com.youyou.app.activity.MyInfoActivity"
            android:launchMode="singleTask"></activity>         
            
        <activity 
            android:name="com.youyou.app.activity.MessageActivity"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.NewActivity"
            android:launchMode="singleTask"></activity>   
            
        <activity 
            android:name="com.youyou.app.activity.DeliciousDetailActivity"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.NewDetailActivity"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.PeoplesActivity"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.ProductsActivity"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.WaitActivity"
            android:launchMode="singleTask"></activity> 
      
    </application>

</manifest>
