            android:launchMode="singleTask"></activity>   
            
        <activity 
            android:name="com.youyou.app.activity.MessageDeatilActivity"
            android:launchMode="singleTask"></activity>  
            
        <activity 
            android:name="com.youyou.app.activity.FeedBackActivity"
            android:launchMode="singleTask"></activity>   
            
        <activity 
            android:name="com.youyou.app.activity.SetActivity"
            android:launchMode="singleTask"></activity> 
            
        <activity 
            android:name="com.youyou.app.activity.AboutActivity"
            android:launchMode="singleTask"></activity>  
            
        <activity 
            android:name="com.youyou.app.activity.GameDetailActivity"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"></activity>        
      
    </application>

</manifest>
