<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_input_nickname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_input_nickname_child"
        android:layout_width="302dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_input_nickname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dp"
            android:text="请输入昵称"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/met_input_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginLeft="20dip"
            android:layout_marginTop="20dp"
            android:hint="请输入支付密码"
            android:textColorHint="@color/no9_gray"
            android:paddingLeft="12dp"
            android:textCursorDrawable="@drawable/icon_cursor"
            android:textSize="16sp"
            android:textColor="@color/no6_gray"
            android:inputType="textPassword"
            android:background="@null"/> 

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_input_sure"
                android:layout_width="64dip"
                android:layout_height="36dip"
                android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
            	android:layout_marginRight="12dip"
                android:background="@drawable/button_white_selector"
                android:text="确认"
                android:textColor="@drawable/button_enable_text_selector_orange"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_input_cancel"
                android:layout_width="64dip"
                android:layout_height="36dip"
                android:layout_centerVertical="true"
            	android:layout_toLeftOf="@+id/btn_input_sure"
                android:background="@drawable/button_white_selector"
                android:text="取消"
                android:textColor="@drawable/button_enable_text_selector_black"
                android:textSize="14sp" />
        </RelativeLayout>        
    </LinearLayout>    
</LinearLayout>