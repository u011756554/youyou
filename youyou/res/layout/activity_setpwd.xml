<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no3_bg"
    android:orientation="vertical"> 

    <include layout="@layout/title"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:background="@color/no4_bg"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            
            <TextView
                android:id="@+id/tv_setpwd_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设置密码"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_no2"/>
            
            <EditText
                android:id="@+id/edt_setpwd_inputcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_setpwd_code"
                android:background="@null"
                android:layout_centerVertical="true"
                android:paddingLeft="34dp"
                android:hint="请输入密码"
                android:textSize="@dimen/textsize_no2"
                android:textColorHighlight="@color/no6_gray"
                
                android:inputType="number"/>
		</RelativeLayout> 
		
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
			android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/no5_stroke"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            
            <TextView
                android:id="@+id/tv_setpwd_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="确认密码"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_no2"/>
            
            <EditText
                android:id="@+id/edt_setpwd_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_setpwd_pwd"
                android:background="@null"
                android:layout_centerVertical="true"
                android:paddingLeft="34dp"
                android:hint="请输入密码"
                android:textSize="@dimen/textsize_no2"
                android:textColorHighlight="@color/no6_gray"
                
                android:inputType="textPassword"/>
		</RelativeLayout>         
        
    </LinearLayout>
    
    
    <Button
        android:id="@+id/btn_setpwd"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bg_selector"
        android:text="重置"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_no1"
        android:textStyle="bold"/>     
    
</LinearLayout>
